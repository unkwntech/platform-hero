{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "runtimeArgs": [
                "-r",
                "tsconfig-paths/register",
                "${workspaceFolder}/dist/main.js"
            ],
            "env": {
                "TS_NODE_BASEURL": "./dist"
            }
        }
    ]
}
